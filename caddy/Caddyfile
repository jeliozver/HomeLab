http://homepage.home.arpa {
  import common_internal_http

  @allowed {
    import allowed_ip_local_only
  }

  handle @allowed {
    import authenticate

    reverse_proxy 192.168.100.13:3000
  }

  handle {
    respond "Access denied" 403
  }
}