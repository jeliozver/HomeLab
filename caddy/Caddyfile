# Wildcard for internal usage only
*.jeliozver.com {
  import tls_porkbun
  import headers
  import encoding
  import log
  import allowed_ip_local_only

  handle @blocked {
    respond "Forbidden!" 403
  }

  @vaultwarden host vaultwarden.jeliozver.com
  handle @vaultwarden {
    reverse_proxy 127.0.0.1:7000 {
      header_up X-Real-IP {remote_host}
    }
  }

  @sonarr host sonarr.jeliozver.com
  handle @sonarr {
    reverse_proxy 192.168.100.X:8989
  }

  @radarr host radarr.jeliozver.com
  handle @radarr {
    reverse_proxy 192.168.100.X:7878
  }

  @prowlarr host prowlarr.jeliozver.com
  handle @prowlarr {
    reverse_proxy 192.168.100.X:9696
  }

  @bazarr host bazarr.jeliozver.com
  handle @bazarr {
    reverse_proxy 192.168.100.X:6767
  }

  @notifiarr host notifiarr.jeliozver.com
  handle @notifiarr {
    reverse_proxy 192.168.100.X:5454
  }

  @autobrr host autobrr.jeliozver.com
  handle @autobrr {
    reverse_proxy 192.168.100.X:7474
  }

  @qui host qui.jeliozver.com
  handle @qui {
    reverse_proxy 192.168.100.X:7476
  }

  @portainer host portainer.jeliozver.com
  handle @portainer {
    reverse_proxy 192.168.100.X:9443
  }

  @homepage host homepage.jeliozver.com
  handle @homepage {
    import authenticate

    reverse_proxy 192.168.100.X:3000
  }

  handle {
    respond "Not found" 404
  }
}